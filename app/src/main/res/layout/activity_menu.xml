<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_act"
    android:background="@drawable/fondo_degrade">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_menu"
        android:layout_width="331dp"
        android:layout_height="186dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="433dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_menu"
        app:layout_constraintVertical_bias="0.943">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="278dp"
                android:layout_height="138dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/texto_menu">

                <Button
                    android:id="@+id/gestionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="gestion"
                    app:cardCornerRadius="20dp" />

                <Button
                    android:id="@+id/listaButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lista"
                    app:cardCornerRadius="20dp" />

                <Button
                    android:id="@+id/spinnerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="spinner"
                    app:cardCornerRadius="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/texto_menu"
                android:layout_width="279dp"
                android:layout_height="179dp"
                android:layout_marginTop="36dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="nienvenido de nuevo esta es el menu de la tienda aca puede eligir cuales skin para que pueda comprar " />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>